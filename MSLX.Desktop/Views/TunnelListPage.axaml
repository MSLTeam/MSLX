<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:suki="clr-namespace:SukiUI.Controls;assembly=SukiUI"
             xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             x:Class="MSLX.Desktop.Views.TunnelListPage"
             xmlns:vm="using:MSLX.Desktop.Views"
             x:DataType="vm:TunnelListPage">
  <suki:GlassCard Margin="10">
    <Grid RowDefinitions="Auto,*">
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="15">
            <TextBlock Text="隧道列表" Classes="h3"/>
            <Button Classes="Flat" VerticalAlignment="Center" Click="RefreshBtn_Click">
                <icons:MaterialIcon Kind="Refresh"/>
            </Button>
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Tunnels}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <suki:GlassCard Margin="10">
                            <Grid ColumnDefinitions="*, Auto">
                                <StackPanel Spacing="5">
                                    <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Medium"/>
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <TextBlock Text="{Binding Service}" Opacity="0.6"/>
                                        <TextBlock Text="{Binding ConfigType}" Opacity="0.6"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="15" VerticalAlignment="Center">
                                    <Border Background="{Binding StatusColor}" CornerRadius="4" Padding="8,4">
                                        <TextBlock Text="{Binding StatusText}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="12"/>
                                    </Border>
                                    
                                    <Button IsEnabled="{Binding !Status}" Foreground="Green">
                                        <icons:MaterialIcon Kind="Play"/>
                                    </Button>
                                    <Button IsEnabled="{Binding Status}" Foreground="Red">
                                        <icons:MaterialIcon Kind="Stop"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </suki:GlassCard>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
  </suki:GlassCard>
</UserControl>