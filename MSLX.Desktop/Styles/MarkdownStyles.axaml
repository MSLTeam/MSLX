<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ctxt="clr-namespace:ColorTextBlock.Avalonia;assembly=ColorTextBlock.Avalonia"
        xmlns:mdctl="clr-namespace:Markdown.Avalonia.Controls;assembly=Markdown.Avalonia">

    <Style Selector=".MSLXMarkdownStyle ctxt|CTextBlock.Heading1">
        <Setter Property="Foreground" Value="{DynamicResource SukiText}"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,15,0,10"/>
    </Style>

    <Style Selector=".MSLXMarkdownStyle ctxt|CTextBlock.Heading2">
        <Setter Property="Foreground" Value="{DynamicResource SukiText}"/>
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,15,0,8"/>
    </Style>

    <Style Selector=".MSLXMarkdownStyle ctxt|CTextBlock.Heading3">
        <Setter Property="Foreground" Value="{DynamicResource SukiText}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,10,0,5"/>
    </Style>

    <Style Selector=".MSLXMarkdownStyle ctxt|CTextBlock.Heading4">
        <Setter Property="Foreground" Value="{DynamicResource SukiText}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Margin" Value="0,8,0,4"/>
    </Style>

    <Style Selector=".MSLXMarkdownStyle ctxt|CHyperlink">
        <Setter Property="Foreground" Value="{DynamicResource SukiPrimaryColor}"/>
        <Setter Property="IsUnderline" Value="False"/>
    </Style>
    <Style Selector=".MSLXMarkdownStyle ctxt|CHyperlink:pointerover">
        <Setter Property="IsUnderline" Value="True"/>
        <Setter Property="Foreground" Value="{DynamicResource SukiPrimaryColor}"/>
    </Style>

    <Style Selector=".MSLXMarkdownStyle Border.Blockquote">
        <Setter Property="BorderBrush" Value="{DynamicResource SukiPrimaryColor}"/>
        <Setter Property="BorderThickness" Value="4,0,0,0"/>
        <Setter Property="Padding" Value="15,10"/>
        <Setter Property="Margin" Value="0,10"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>
    <Style Selector=".MSLXMarkdownStyle .Blockquote ctxt|CTextBlock">
        <Setter Property="Foreground" Value="{DynamicResource SukiText}"/>
        <Setter Property="Opacity" Value="0.8"/>
        <Setter Property="FontSize" Value="15"/>
    </Style>

    <Style Selector=".MSLXMarkdownStyle ctxt|CCode">
        <Setter Property="Foreground" Value="{DynamicResource SukiPrimaryColor}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{DynamicResource SukiPrimaryColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="4,0"/>
        <Setter Property="Margin" Value="2,0"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="FontFamily" Value="Maple Mono NF, Consolas, monospace"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style Selector=".MSLXMarkdownStyle Border.CodeBlock">
        <Setter Property="Background" Value="{DynamicResource SukiCardBackground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource SukiBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Margin" Value="0,10"/>
    </Style>

    <Style Selector=".MSLXMarkdownStyle Border.Table">
        <Setter Property="BorderBrush" Value="{DynamicResource SukiBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Margin" Value="0,15"/>
    </Style>
    <Style Selector=".MSLXMarkdownStyle Border.TableHeader">
        <Setter Property="Background" Value="{DynamicResource SukiControlTouchBackground}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource SukiBorderBrush}"/>
        <Setter Property="Padding" Value="12,8"/>
    </Style>
    <Style Selector=".MSLXMarkdownStyle Border.TableHeader ctxt|CTextBlock">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{DynamicResource SukiText}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    <Style Selector=".MSLXMarkdownStyle Border.EvenTableRow">
        <Setter Property="Background" Value="{DynamicResource SukiControlTouchBackground}"/>
        <Setter Property="Opacity" Value="0.5"/>
        <Setter Property="Padding" Value="12,8"/>
    </Style>
    <Style Selector=".MSLXMarkdownStyle Border.OddTableRow">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="12,8"/>
    </Style>

    <Style Selector=".MSLXMarkdownStyle mdctl|Rule">
        <Setter Property="Foreground" Value="{DynamicResource SukiBorderBrush}"/>
        <Setter Property="Opacity" Value="1.0"/>
        <Setter Property="Margin" Value="0,20"/>
    </Style>

    <Style Selector=".MSLXMarkdownStyle ctxt|CTextBlock.ListMarker">
        <Setter Property="Foreground" Value="{DynamicResource SukiPrimaryColor}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,0,8,0"/>
    </Style>

    <Style Selector=".MSLXMarkdownStyle ctxt|CTextBlock">
        <Setter Property="FontSize" Value="15"/>
    </Style>
    <Style Selector=".MSLXMarkdownStyle .List ctxt|CTextBlock">
        <Setter Property="FontSize" Value="15"/>
    </Style>

</Styles>