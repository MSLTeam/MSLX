{
  "name": "MSLX.WebPanel",
  "version": "1.0.0",
  "scripts": {
    "dev:mock": "vite --open --mode mock",
    "dev": "vite --open --mode development",
    "dev:linux": "vite --mode development",
    "build:test": "vite build --mode test",
    "build": "vue-tsc --noEmit && vite build --mode release",
    "preview": "vite preview",
    "lint": "eslint --ext .vue,.js,.jsx,.ts,.tsx ./ --max-warnings 0",
    "lint:fix": "eslint --ext .vue,.js,jsx,.ts,.tsx ./ --max-warnings 0 --fix",
    "stylelint": "stylelint src/**/*.{html,vue,sass,less}",
    "stylelint:fix": "stylelint --fix src/**/*.{html,vue,vss,sass,less}",
    "prepare": "node -e \"if(require('fs').existsSync('.git')){process.exit(1)}\" || is-ci || husky install",
    "site:preview": "npm run build && cp -r dist _site",
    "test": "echo \"no test specified,work in process\"",
    "test:coverage": "echo \"no test:coverage specified,work in process\""
  },
  "dependencies": {
    "@eslint/js": "^9.38.0",
    "axios": "^1.7.2",
    "dayjs": "^1.11.11",
    "echarts": "^5.5.1",
    "lodash": "^4.17.21",
    "nprogress": "^0.2.0",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.1",
    "qrcode.vue": "^3.4.1",
    "qs": "^6.13.0",
    "tdesign-icons-vue-next": "^0.2.2",
    "tdesign-vue-next": "^1.9.4",
    "tvision-color": "^1.6.0",
    "typescript-eslint": "^8.46.2",
    "vue": "^3.4.31",
    "vue-clipboard3": "^2.0.0",
    "vue-router": "^4.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/lodash": "^4.17.7",
    "@types/qs": "^6.9.15",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-vue": "^5.1.0",
    "@vitejs/plugin-vue-jsx": "^4.0.0",
    "@vue/compiler-sfc": "^3.4.31",
    "@vue/eslint-config-typescript": "^14.6.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^10.5.1",
    "eslint-plugin-vue-scoped-css": "^2.6.0",
    "husky": "^9.1.1",
    "less": "^4.2.0",
    "lint-staged": "^15.2.7",
    "mockjs": "^1.1.0",
    "prettier": "^3.3.3",
    "stylelint": "^16.25.0",
    "stylelint-less": "^3.0.0",
    "stylelint-order": "^6.0.4",
    "typescript": "^5.5.3",
    "vite": "^5.3.3",
    "vite-plugin-mock": "^3.0.1",
    "vite-svg-loader": "^5.1.0",
    "vue-tsc": "^2.0.26"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "prettier --write",
      "npm run lint:fix",
      "git add ."
    ],
    "*.{html,vue,vss,sass,less}": [
      "npm run stylelint:fix",
      "git add ."
    ]
  },
  "description": "MSLX Web Panel"
}
