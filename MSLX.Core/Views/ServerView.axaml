<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:suki="clr-namespace:SukiUI.Controls;assembly=SukiUI"
             xmlns:mi="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MSLX.Views.ServerView"
             xmlns:vm="clr-namespace:MSLX.ViewModels"
             x:DataType="vm:ServerViewModel">
  <Design.DataContext>
    <vm:ServerViewModel/>
  </Design.DataContext>

  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <TextBox Text="{Binding ServerLogs}" VerticalContentAlignment="Top" IsReadOnly="True" TextChanged="ServerLogsBox_TextChanged"/>
    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>
      <TextBox Text="{Binding CmdSendToServer}"/>
      <StackPanel Grid.Column="1" Orientation="Horizontal">
        <Button Content="{Binding SendCmdBtn}" Command="{Binding SendCmdToServerCommand}"/>
        <Button Content="{Binding ControlServerBtn}" Command="{Binding RunServerCommand}"/>
      </StackPanel>
    </Grid>
  </Grid>
</UserControl>
